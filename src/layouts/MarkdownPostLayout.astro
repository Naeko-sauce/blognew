---
import BaseLayout from './BaseLayout.astro';
import PostPage from '../ReactComponents/Pages/PostPage.jsx';

// 获取Astro props
const props = Astro.props;
const frontmatter = props.frontmatter;
---

<BaseLayout pageTitle={frontmatter?.title || '无标题'}>
  <PostPage frontmatter={frontmatter}>
    <slot />
  </PostPage>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin-right: 10px;
    background-color: #eee;
    padding: 5px;
    border-radius: 3px;
  }
  
  .post-layout-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .post-content {
    margin-top: 20px;
    line-height: 1.6;
  }
</style>
